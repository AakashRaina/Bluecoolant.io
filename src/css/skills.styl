@import './theme.styl'

.skills
  color var(--primary-color)
  padding 10px 0px 10px 10px
  display flex
  flex-direction column

  div:nth-child(2n){
    margin-top 20px
    width 100%
    overflow scroll
  }

  .skill-item{
    border-radius 3px
    padding 6px
    color var(--secondary-color)
    margin-right 20px
    font-size 1rem
    font-size bold
    display inline-block
    border 2px solid var(--primary-color)
    box-shadow: 0px 1px 1px 1px var(--primary-color)
  }