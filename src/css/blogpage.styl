.blog-page-content
  color var(--textNormal)
  font-size 18px
  font-family 'Noto Serif', serif
  padding 0px 15px
  hyphens auto
  word-break normal

  p
    line-height 1.8

  code
    background-color var(--code-bg)
    border-radius 3px
    padding .15em .2em .05em
    color black

  li
    line-height 1.8
    margin-bottom 17px
    padding-left 10px

    &:nth-child(2n)::marker
      content 'üèÜ'
    
    &:nth-child(2n+1)::marker
      content 'üéØ'

  a
    text-decoration underline
    color var(--textLink)
    font-weight bold

  blockquote
    margin-left .2rem
    margin-right 1.75rem
    margin-top 0
    margin-bottom 1.75rem
    padding-bottom 0
    padding-left 1.42188rem
    padding-right 0
    padding-top 0
    color inherit
    font-style italic
    border-left 0.32813rem solid hsla(0,0%,0%,0.9)
    border-left-color var(--primary-color)
    opacity 0.8

  .gatsby-resp-image-image
    box-shadow: 1px 0px 25px -8px rgba(0,0,0,0.75);

.blog-header
  margin 60px 0px 40px 0px
  font-size 38px
  color var(--textNormal)
  font-family 'Noto Serif', serif
  text-align center

.blog-meta
  text-align center
  font-family 'Noto Serif', serif
  margin-bottom 30px

  .tag
    background-color var(--code-bg)
    border-radius 15px
    color #000

  span 
    padding 5px 10px
    color var(--textNormal)

.blog-page-footer
  color var(--textNormal)
  margin 50px auto
  text-align center
  font-family 'Noto Serif', serif

.share
  display flex
  justify-content center

  span
    display none
    background-color var(--primary-color)
    height 50px
    width 50px
    border-radius 25px
    color var(--share-color)
    font-size 19px
    position relative
    box-shadow var(--share-box-shadow)

    svg 
      position absolute
      top 15px
      left 15px
