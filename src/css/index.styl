@import './theme.styl';

.bio
  padding 40px 10px

  div:first-child
    font-size $primary-font
    font-weight bold
    animation fadein 1s

  p{
    display inline
  }

  .about
    font-size $secondary-font
    color $secondary-color
    animation fadein 1s

.post-list-header
  padding 10px 0px 7px 10px
  font-size $primary-font
  color $primary-color
  border-bottom 2px #e1e1e1 solid
  font-weight bold
  margin-bottom 30px
  animation fadein 1s