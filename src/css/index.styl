@import './theme.styl';

.bio
  padding 40px 10px

  div:first-child
    font-size $primary-font
    font-weight bold

  p{
    display inline
  }

  .about
    font-size $secondary-font
    color var(--secondary-color)
    word-break break-word
  
  .heart
    filter: drop-shadow(1px 2px 3px red);

.post-list-header
  padding 10px 0px 7px 10px
  font-size $secondary-font
  color var(--secondary-color)
  border-bottom 2px #e1e1e1 solid
  font-weight bold
  margin-bottom 30px

  .active
    color var(--primary-color)
  
  span{
    cursor pointer
    font-weight bold
  }

  span:nth-child(1)
    margin-right 7px
    border-right 2px solid #e1e1e1
    padding-right 7px