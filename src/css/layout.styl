@import './theme.styl';

body
  // background-color $primary-background
  animation fadein 2s
  font-family 'Noto Serif', serif

.layout-container
  width 60%
  margin auto

  a{
    text-decoration none
  }

.header
  padding-left 10px
  padding-top 15px
  border-bottom 2px #e1e1e1 solid

  div:first-child
    font-size $primary-font
    font-weight bold

  .social-links
    padding-top 35px
    padding-bottom 7px

    span
     padding-right 13px

.highlight-text
  // color $primary-color

.underline-highlight
  position relative

  &:after
    position absolute
    content ''
    width 2em
    border-bottom 4px solid $primary-color 
    bottom 0
    left 0
    transform skew(-30deg, 0deg)

@media (max-width : 500px)
  .layout-container 
    width 100%